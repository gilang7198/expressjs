extends ../layout/base
block content
	section.content
		.container-fluid
			.row.clearfix
				.col-lg-12.col-md-12.col-sm-12.col-xs-12
					.card
						.header
							h2 Add Customers
							ul.header-dropdown.m-r--5
								li.dropdown
									a.dropdown-toggle(href='javascript:void(0);', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
										i.material-icons more_vert
									ul.dropdown-menu.pull-right
										li
											a(href='/customers') Back
												i.material-icons arrow_back
						.body
							form.form-horizontal(role='form',method='post', action='/customers/add')
								if (messages.msg_error)  
									!{messages.msg_error}
								.row.clearfix
									.col-lg-2.col-md-2.col-sm-4.col-xs-5.form-control-label
										label(for='name') Name
									.col-lg-10.col-md-10.col-sm-8.col-xs-7
										.form-group
											.form-line
												input.form-control(type='text', name='name',id='name', value='#{name}', placeholder='Enter your full name')
								.row.clearfix
									.col-lg-2.col-md-2.col-sm-4.col-xs-5.form-control-label
										label(for='address') Address
									.col-lg-10.col-md-10.col-sm-8.col-xs-7
										.form-group
											.form-line
												input.form-control(type='text',id='address',name='address', placeholder='Enter your full address')
								.row.clearfix
									.col-lg-2.col-md-2.col-sm-4.col-xs-5.form-control-label
										label(for='email') Email
									.col-lg-10.col-md-10.col-sm-8.col-xs-7
										.form-group
											.form-line
												input.form-control(type='text',name='email', id='email', value='#{email}', placeholder='Enter your email')
								.row.clearfix
									.col-lg-2.col-md-2.col-sm-4.col-xs-5.form-control-label
										label(for='phone') Phone
									.col-lg-10.col-md-10.col-sm-8.col-xs-7
										.form-group
											.form-line
												input.form-control(type='text',id='phone', name='phone', placeholder='Enter your phone number')
								.row.clearfix
									.col-lg-offset-2.col-md-offset-2.col-sm-offset-4.col-xs-offset-5
										button.btn.btn-primary.m-t-15.waves-effect(type='submit') Submit
			// #END# Horizontal Layout